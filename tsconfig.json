{
  "compilerOptions": {
    "types": ["node"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "rootDir": "src",
    "noEmitOnError": true,
    "noEmit": false,
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "build"
  },
  "lib": ["es2015"],
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "**/__test__"]
}
